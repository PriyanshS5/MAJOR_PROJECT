<%layout("/layouts/boilerplate")%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>

    <form
      method="POST"
      action="/listings/<%= listing._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label><br />
        <input
          value="<%=listing.title%>"
          type="text"
          name="listing[title]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Kindly enter a valid title.</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description:</label><br />
        <textarea name="listing[description]" class="form-control" required>
<%=listing.description %></textarea
        >
        <div class="invalid-feedback">Kindly enter a valid title.</div>
      </div>
 
      <div class="mb-3">
        Orginal Listing Image <br>
       <img src="<%=originalImageUrl%>" alt="">
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label><br />
        <input type="file" name="listing[image]" class="form-control" />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price:</label><br />
          <input
            value="<%=listing.price%>"
            type="number"
            name="listing[price]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Kindly enter a valid price.</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country:</label><br />
          <input
            value="<%=listing.country%>"
            type="text"
            name="listing[country]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Kindly enter a valid Country.</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location:</label><br />
        <input
          value="<%=listing.location%>"
          type="text"
          name="listing[location]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Kindly enter a valid location.</div>
      </div>

      <div>
        <button type="submit" class="edit-btn btn-dark mt-3">Edit</button>
      </div>
    </form>
  </div>
</div>
