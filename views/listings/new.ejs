<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2">
    <h3>Add a New Listing</h3>
    
<form action="/listings" method="POST" novalidate class="needs-validation" 
enctype="multipart/form-data">
    <div>
    <label for="title" 
    class="form-label">
    Title:
    </label>
    <br>
    <input type="text" 
    name="listing[title]" 
    class="form-control"
    required>
    <div class="invalid-feedback">Kindly enter a valid title.</div>
    </div>
    
    <br>
    <div>
    <label for="description" 
    class="form-label">Description:</label><br>
    <textarea name="listing[description]" class="form-control" required></textarea>
    <div class="invalid-feedback">Kindly enter a short description.</div>
    </div>

    <br>
    <div>
        <label for="image" 
        class="form-label">Upload Image:</label><br>
        <input type="file" name="listing[image]" class="form-control">
        required
    </div>

    <br>
    <div class="row">
        <div class="col-md-4">
        <label for="price" class="form-label">Price:</label><br>
        <input  name="listing[price]" class="form-control" required>
        <div class="invalid-feedback">Kindly enter a valid price.</div>
        </div>
        <div class="col-md-8">
        <label for="country" class="form-label">Country:</label><br>
        <input type="text" name="listing[country]" class="form-control" required>
        <div class="invalid-feedback">Kindly enter a valid Country name.</div>
        </div>
        
    </div>
    <br>
    <div>
    <label for="location" class="form-label">Location:</label><br>
    <input type="text" name="listing[location]" class="form-control"
    required>
    <div class="invalid-feedback">Kindly enter the valid Location.</div>
    </div>
    

    <br>
    <button class="btn btn-dark add-btn" type="submit">Submit</button>
</form>
<br>
</div>
</div>

